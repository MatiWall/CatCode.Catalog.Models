{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Base Resource Schema",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string",
      "description": "The API version of the resource, used for versioning."
    },
    "kind": {
      "type": "string",
      "description": "The kind of resource, defining its type."
    },
    "metadata": {
      "type": "object",
      "description": "Metadata about the resource, such as its name and labels.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the resource."
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Key-value pairs for categorizing resources."
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "Arbitrary metadata for users to attach to resources."
        }
      },
      "required": ["name"]
    }
  },
  "required": ["apiVersion", "kind", "metadata"],
  "additionalProperties": false
}